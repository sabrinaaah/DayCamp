    <% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>

    <h1 class="mt-4">All Doggy Day Camps</h1>
    <div class="mb-3">
        <a class="btn btn-primay bg-warning" href="/daycamp/new">Add a Day Camp</a>
    </div>
    <% for (let campground of campgrounds) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (campground.images.length) { %>
                <img class="img-fluid" src="<%=campground.images[0].url%>" crossorigin>
                <% } else { %>
                <img class="img-fluid"
                    src="https://res.cloudinary.com/doyayes9t/image/upload/v1662671271/YelpCamp/q0htlrflucwbjmlhkj0u.jpg"
                    crossorigin>
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%=campground.title %></h5>
                    <p class="card-text"><%=campground.description %> </p>
                    <p class="card-text">
                        <small class="text-muted"><%=campground.location %> </small>
                    </p>
                    <a href="/daycamp/<%=campground._id %> " class="btn btn-sm btn-primary">View
                        <%=campground.title %></a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
        const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
    </script>
    <script src="/js/clusterMap.js"></script>